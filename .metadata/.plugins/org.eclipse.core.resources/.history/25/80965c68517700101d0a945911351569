package com.sutherland.library.exceptions;

import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.ControllerAdvice;
import org.springframework.web.bind.annotation.ExceptionHandler;

@ControllerAdvice
public class GlobalExceptionHandler {
	
	@ExceptionHandler(value = BookIdAlreadyExistsException.class)
	public ResponseEntity<String> bookIdExistsException(
			BookIdAlreadyExistsException ex){
		
		return new ResponseEntity<String>(ex.getMessage(),HttpStatus.FOUND) ;
	}
}
